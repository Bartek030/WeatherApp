<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="20.0">
         <children>
            <Label text="Podaj miasto: " textFill="#ff8c1a">
               <font>
                  <Font name="Comic Sans MS Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="newCityTextField" prefWidth="500.0" promptText="np. Kraków" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Button id="searchButton" mnemonicParsing="false" onAction="#showNewCityForecastButton" text="Wyświetl prognozę">
               <font>
                  <Font name="Comic Sans MS" size="20.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
         <VBox.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </VBox.margin>
      </HBox>
      <HBox fx:id="newCityForecastHBox" prefHeight="100.0" prefWidth="200.0" />
   </children>
</VBox>
